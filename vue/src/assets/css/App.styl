#top-fixed
  .top
    position relative
    width  100%
    height  2.75rem
    border-color  #b30d37
    background-color  #e21145
    padding  0.3125rem
    box-sizing  border-box
    color #fff
    a:nth-of-type(2)
      display  inline-block
      width  7.1875rem
      height  2.1875rem
      line-height  2.0rem
      padding  0 0.5rem
      background  url("../imgs/app.png") no-repeat -15px -2px
      background-size  150px auto
      margin  0 0.5rem
    a:first-of-type
      position absolute
      left 0
      top 0
      line-height 2.75rem
      margin-left 0.625rem
      background none
      color #fff
    .hide
      display none
      font-size 1.125rem
  ul
    height  2.75rem
    border-color  #ddd
    background-color  #fff
    color  #444
    padding  0 1.0rem
    display flex
    justify-content  space-around
    align-items  center
    box-sizing  border-box
    border-top  1px solid transparent
    border-bottom  1px solid #eaeaea
    li
      width 16.66%
      a
        display inline-block
        text-align center
        font-weight 400
        font-size 0.875rem
        color #333
        width 100%
        height 2.75rem
        line-height 2.75rem
      .router-link-active
        font-weight 500
        color #e21145
        box-shadow inset 0 -2px 0 #e21145
.load{
  width: 100%;
  height: 2.8125rem;
  line-height: 2.8125rem;
  text-align: center;
  font-size: 0.875rem;
  background: #ececec;
  color: #9a9a9a;
